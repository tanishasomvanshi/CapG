using System;
using System.Threading;

namespace ThreadingExample
{
    //using loops for example
    class Program
    { 
        static void Main()
        {
            Sample sample = new Sample();
            Thread thread1 = new Thread(sample.Method1);
            Thread thread2 = new Thread(sample.Method2);
            //simultaneous or parallel execution of both threads 
            thread1.Start();
            thread2.Start();

            Console.ReadKey();
        }
    }
    public class Sample
    {
        public void Method1()
        {
            for (int i = 1; i<=1000; i++)
            {
                Console.Write($"i={i} ");
            }
        }
        public void Method2()
        {
            for (int j = 1; j<=1000; j++)
            {
                Console.Write($"j={j} ");
            }
        }
    }
}
